.footer-guide
  position relative
  z-index 10
  width 100%
  height 1.30667rem
  margin-top -1.30667rem
  display flex
  align-items center
  justify-content center
  background-color #ffffff
  >li
    display flex
    flex-direction column
    flex 1
    >a
      text-align center
      .icon
        width: .53333rem
        height: .53333rem
        display: inline-block
        vertical-align: middle
        background-image url("../../assets/images/nav/nav.png")
        background-repeat no-repeat
        background-size .53333rem 6.53333rem
        &.home-icon
          background-position 0 -3.33333rem
          &.active
            background-position 0 -2.66667rem
        &.shiwu-icon
          background-position 0 -4.66667rem
          &.active
            background-position 0 -4rem
        &.category-icon
          background-position 0 -2rem
          &.active
            background-position 0 -1.33333rem
        &.shopcar-icon
          background-position 0 -.66667rem
          &.active
            background-position 0 0
        &.personnelcenter-icon
          background-position 0 -6rem
          &.active
            background-position 0 -6rem
      span
        display: block;
        font-size: .32rem;
        color: #666;
        line-height: 1;
        &.active
          color #b4282d